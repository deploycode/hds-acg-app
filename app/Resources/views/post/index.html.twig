{% extends 'layouts/dashboard.html.twig' %}

{% block body %}
    <h1>Posts list</h1>
    <div class="form-group text-right">
      <a href="{{ path('post_new') }}" class="btn btn-success">Create a new post</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Menu</th>
                <th>Isactive</th>
                <th>Isfavorite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.menu.name }}</td>
                <td>{% if post.isActive %}Yes{% else %}No{% endif %}</td>
                <td>{% if post.isFavorite %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a target="_blank" href="{{ path('post_view', { 'slug': post.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
